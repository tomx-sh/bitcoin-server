{
    "compilerOptions": {
        "esModuleInterop": true, // Enable interop for CommonJS modules
        "allowSyntheticDefaultImports": true, // Allow default imports from CommonJS modules
        "module": "CommonJS", // CommonJS for Node.js compatibility
        "moduleResolution": "node", // Node.js-style module resolution
        "target": "ESNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}